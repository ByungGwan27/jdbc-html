<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.notice.mapper.NoticeMapper"> <!-- 1. 주소 변경 -->
  <!-- <select id="getEmp" resultType="com.yedam.domain.Employee"> --> <!-- 3-2. Aliases 적용 전-->
  <select id="getEmp" resultType="employee"> <!-- 3.클래스 선언문 바꾸듯 바꾸기 id는 클래스명과 동일-->
    select * from employees where employee_id = #{id} <!-- 2. 테이블 수정 -->
  </select>
  <select id="empList" resultType="employee">
    select * from employees order by employee_id
  </select>
    <!-- delete문과 insert문은 결과타입이 아닌 받아올 매개값이 있어야하므로 
  parameter타입이 필요함  -->
  <delete id="delEmp" parameterType="int">
    delete from employees WHERE employee_id = #{id}
  </delete>
  <insert id="addEmp" parameterType="employee">
  	insert into employees (employee_id, last_name, email, job_id, hire_date)
  	values(#{employeeId}, #{lastName}, #{email}, #{jobId}, sysdate) <!-- 데이터이름이랑 맞춰주기 --> 
  </insert>
  
  <!-- 공지사항관련. -->
   <select id="noticeList" resultType="notice"> <!-- notice는 앨리어스-->
    select * from tbl_notice order by 1
  </select>
  
  <insert id="insertNotice" parameterType="notice">
  	INSERT INTO tbl_notice (notice_id, notice_writer, notice_title, notice_subject, attach_file)
	VALUES(notice_seq.nextval, #{noticeWriter}, #{noticeTitle}, #{noticeSubject}, #{attachFile}) <!-- #{}안에는 필드타입으로 -->
  </insert>
  
  <update id="updateNotice" parameterType="notice">
  	update tbl_notice
  	  set notice_title=#{noticeTitle},
  	      notice_subject=#{noticeSubject}
  	where notice_id = #{noticeId}
  </update>
  
  <delete id="deleteNotice" parameterType="int">
  	delete from tbl_notice where notice_id= #{noticeId}
  </delete>
  
   <select id="searchNotice" resultType="notice" parameterType="int"> <!-- notice는 앨리어스-->
    select * from tbl_notice where notice_id=#{noticeId}
  </select>
  
  <!-- 조회수 추가 -->
  <update id="updateCount" parameterType="int">
  	update tbl_notice set hit_count=hit_count+1 where notice_id=#{noticeId}
  </update>
  
  
</mapper>